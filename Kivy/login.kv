<LoginScreen>:
    name: 'login'
    canvas.before:
        Color:
            rgba: 0/255, 51/255, 102/255, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        size_hint: None, None
        size: 400, 300
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 173/255, 216/255, 230/255, 1
            RoundedRectangle:
                pos: self.pos
                size: self.size
				radius: [dp(20)]
        MDLabel:
            id: welcome_label
            text: "Welcome"
            font_size: 40
            halign: 'center'
            text_color: rgba(234, 23, 123, 0.9)
            size_hint_y: None
            height: self.texture_size[1] + dp(30)
            padding_y: 15

        MDTextField:
            mode: "round"
            id: user
            hint_text: "username"
            icon_right: "account"
            size_hint_x: None
            width: 250
            font_size: 18
            pos_hint: {"center_x": 0.5}

        MDTextField:
            mode: "round"
            id: password
            hint_text: "password"
            icon_right: "eye-off"
            size_hint_x: None
            width: 250
            font_size: 18
            pos_hint: {"center_x": 0.5}
            password: True
            
		MDFillRoundFlatIconButton:
			style:"filled"
			text: "Login"
			font_size: 18
			pos_hint: {"center_x": 0.5}
            on_press: app.login()
