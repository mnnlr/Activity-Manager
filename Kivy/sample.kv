<ProfileCard>:
    id: action
    orientation: 'horizontal'
    size_hint_y: .26
    elevation: 2
    padding: dp(8)
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [dp(20)]  
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: .2
        spacing: dp(8)
        padding: dp(10)
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [dp(20)]
                
        AsyncImage:
            id: avatar
            source: '' 
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [dp(50)]
                    
        MDLabel:
            id: name
            text: "Deepak Chand"
            size_hint_y: None
            height: dp(40)
            halign: 'center'
            valign: 'middle'
            
    BoxLayout:
        size_hint_x: .5
        spacing: dp(8)
        padding: dp(8)
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [dp(20)]
                
        MDLabel:
            id: designation
            text: "Designation: Developer"
            halign: "center"
        MDLabel:
            id: joined
            text: "Joined: Aug 2024"
            halign: "center"
        MDLabel:
            id: email
            text: "Email: ootalaldeepak128@gmail.com"
            halign: "center"
        MDLabel:
            id: phone
            text: "Phone: 9131043168"
            halign: "center"
            
    BoxLayout:
        spacing: dp(8)
        padding: dp(8)
        size_hint_x: .3
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [dp(20)]
                
        MDLabel:
            id: last_login
            text: "Last Login: 23-23-23"
            halign: "center"
        MDLabel:
            id: duration
            text: "Working hours: Aug 2024"
            halign: "center"
