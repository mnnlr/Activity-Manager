<SuccessScreen>:
    name: "success"
	BoxLayout:
		spacing: dp(8)

		canvas.before:
			Color:
				rgba: rgba('#02a995')
			Rectangle:
				pos: self.pos
				size: self.size

		BoxLayout:
			size_hint_x: .2
			orientation: 'vertical'
			padding: dp(10)

			canvas.before:
				Color:
					rgba: rgba('#02a995')
				Rectangle:
					pos: self.pos
					size: self.size

			BoxLayout:
				orientation: 'vertical'
				size_hint_y: .26
				padding: dp(10)

				canvas.before:
					Color:
						rgba: rgba('#02a995')
					Rectangle:
						pos: self.pos
						size: self.size
				Image:
					id: logo
					source: 'logo.png'
			BoxLayout:
				orientation: 'vertical'
				size_hint_y: .4
				padding: dp(10)
				spacing: dp(8)

				MDCard:
					size_hint_y: .25
					elevation: 1
					on_release: app.display_personalinfo()
					MDLabel:
						id: personal_info
						font_style: "Button"
						text: "Personal Info"
						halign: "center"

				MDCard:
					size_hint_y: .25
					elevation: 1
					on_release: app.display_employeeinfo()
					MDLabel:
						id: employee_info
						font_style: "Button"
						text: "Employee Info"
						halign: "center"

				MDCard:
					size_hint_y: .25
					elevation: 1
					on_release: app.display_table()
					MDLabel:
						id: attendence_info
						font_style: "Button"
						text: "Attendance Info"
						halign: "center"

				MDCard:
					size_hint_y: .25
					elevation: 1
					MDLabel:
						id: employee_info
						font_style: "Button"
						text: "Analytics Info"
						halign: "center"

			BoxLayout:
				orientation: 'vertical'
				size_hint_y: .4
				MDFillRoundFlatIconButton:
					style: "filled"
					md_bg_color: rgba('#099080')
					text: "Logout"
					font_size: 18
					pos_hint: {"center_x": 0.5}
					on_press: app.logout()
					halign: "center"

				Widget:
					size_hint_y: None
					height: dp(20)    

		BoxLayout:
			id: tab
			size_hint_x: .8
			padding: dp(10)
			orientation: 'vertical'

			canvas.before:
				Color:
					rgba: rgba('#02a995')
				Rectangle:
					pos: self.pos
					size: self.size

			ProfileCard:
				id: profile_card
				name: "John Doe"
				designation: "Software Engineer"
				address: "1234 Elm Street"
				phone_number: "+1 234 567 890"
				email: "john.doe@example.com"

			BoxLayout:
				id: downcard
				size_hint_y: .8

				canvas.before:
					Color:
						rgba: rgba('#02a995')
					Rectangle:
						pos: self.pos
						size: self.size

				MDCard:
					size_hint_y: .97
					orientation: 'vertical'
					elevation: 2
					BoxLayout:
						size_hint:(1,.1)
						
						MDLabel:
							id: widget
							text: "DOWN"
							font_style: "H6"
							font_size: 20
							halign: 'center'
					MDCard:
						id: scroll_container
						orientation:'vertical'
						size_hint: (1, 1)
						
							


							

						
							
					
